<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF5FF">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    <RelativeLayout
        android:id="@+id/tv_rellayout_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:layout_editor_absoluteY="0dp"
        tool:layout_editor_absoluteX="8dp">
        <include layout="@layout/layout_top_tabs" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_rellayout_middle"
        android:layout_below="@+id/tv_rellayout_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/layout_center_viewpagers"/>

    </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>